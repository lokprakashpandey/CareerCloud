@model string[]


@{
    ViewBag.Title = "ADashboard";
}

<h2>Applicant Dashboard</h2>

<table class="table">
    <tr>
        <th>
            Company Name
        </th>
        <th>
            Job Name
        </th>
        <th>
            Job Description
        </th>
    </tr>

    

    @for (int i = 0; i < Model.Where(x => x != null).Count(); i += 3)
    {
        <tr>
            <td>
                @Model.ElementAtOrDefault(i)
            </td>
            <td>
                @Model.ElementAtOrDefault(i + 1)
            </td>
            <td>
                @Model.ElementAtOrDefault(i + 2)
            </td>
        </tr>
    }
</table>
